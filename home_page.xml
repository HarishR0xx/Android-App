<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/wallpaper">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoLayout"
        android:layout_centerHorizontal="true"
        android:alpha="0.8">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.8"
            android:background="@drawable/shape"
            android:padding="40dp">

            <Button
                android:id="@+id/addVehicleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Vehicle"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#296D98"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:theme="@style/Theme.Material3.Dark.NoActionBar"
                />

            <Button
                android:id="@+id/searchVehicleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Vehicle"
                android:layout_below="@id/addVehicleButton"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#296D98"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:theme="@style/Theme.Material3.Dark.NoActionBar"
                />

            <Button
                android:id="@+id/showSlotAvailabilityButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Slot Availability"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#296D98"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_below="@id/searchVehicleButton"
                android:theme="@style/Theme.Material3.Dark.NoActionBar"
                />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>


